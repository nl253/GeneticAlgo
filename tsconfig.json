{
  "files": [
    "index.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "types": ["node"],
    "downlevelIteration": true,
    "strict": true,
    "allowJs": true,
    "alwaysStrict": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "listEmittedFiles": true,
    "removeComments": true,
    "newLine": "LF",
    "outDir": ".",
    "pretty": true,
    "watch": false,
    "listFiles": false,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
    "inlineSourceMap": true
  },
  "exclude": [
    "examples",
    "node_modules"
  ]
}
